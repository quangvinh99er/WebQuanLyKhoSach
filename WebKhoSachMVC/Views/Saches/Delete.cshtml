@model WebKhoSachMVC.Models.Sach

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/Lockout.cshtml";
}

<h2>Xóa</h2>

<h3>Bạn có chắc chắn muốn xóa?</h3>
<div>
    <h4>Quản lý sách</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <p>Tên Sách</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSach)
        </dd>

        <dt>
            <p>Giá Thành</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GiaThanh)
        </dd>

        <dt>
            <p>Nhà Xuất Bản</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NhaXuatBan)
        </dd>

        <dt>
            <p>Tác Giả</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TacGia)
        </dd>

        <dt>
            <p>Năm Xuất Bản</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NamXB)
        </dd>

        <dt>
            <p>Số Lượng Phát Hành</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Soluongphathanh)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xoá" class="btn btn-default" /> |
            @Html.ActionLink("Trở về", "Index")
        </div>
    }
</div>
