@model WebKhoSachMVC.Models.NhapKho

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/Lockout.cshtml";
}

<h2>Xoá</h2>

<h3>Bạn có chắc chắn muốn xóa?</h3>
<div>
    <h4>Nhập kho</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <p>Ngày Nhập</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayNhap)
        </dd>

        <dt>
            <p>Số Lượng Nhập</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Soluongnhap)
        </dd>

        <dt>
            <p>Tên Sách</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sach.TenSach)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở về", "Index")
        </div>
    }
</div>
